<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="780px"
    android:layout_height="60px"
    android:orientation="vertical"
   >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="780px"
        android:layout_height="60px"
        android:layout_marginTop="10sp"
        android:fadingEdge="none"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="780px"
            android:layout_height="wrap_content" android:gravity="center" android:id="@+id/linearLayout_scrollMain">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="center" android:id="@+id/beforeLoading">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_pulltorefresh_arrow" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3px"
                    android:text="새로고침하려면 해제하세요.."
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:visibility="gone"
                android:layout_marginTop="3dp"
                style="?android:attr/progressBarStyleSmall"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>