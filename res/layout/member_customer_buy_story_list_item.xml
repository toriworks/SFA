<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgBack"
    android:layout_width="780px"
    android:layout_height="52px"
     >
 	<TextView
           android:id="@+id/txtBuyDate"
    		android:layout_width="82px"
    		android:layout_height="50px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
         />
 	
 	<TextView
 	    	android:id="@+id/txtBuyShop"
    		android:layout_width="150px"
    		android:layout_height="50px"
    		android:textSize="13px"
    		android:gravity="center_vertical"
    		android:singleLine="true"
    		android:layout_marginLeft="2px"
    		android:textColor="#ffffff"
         />
 	
 	<LinearLayout 
 	    	android:layout_width="303px"
    		android:layout_height="50px"
    		android:layout_marginLeft="2px"
    		android:orientation="vertical"
 	 >
 	    <TableRow 
 	    	android:layout_width="303px"
    		android:layout_height="24px"
    		android:orientation="horizontal"
 	 >
        <TextView 
            android:id="@+id/txtProductCode"
 	    	android:layout_width="153px"
    		android:layout_height="24px"
    		android:textSize="13px"
    		android:gravity="center_vertical"
    		android:singleLine="true"
    		android:textColor="#ffffff"
 	 	/>
 	        <TextView 
 	            android:id="@+id/txtColorCode"
 	    	android:layout_width="48px"
    		android:layout_height="24px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:layout_marginLeft="2px"
    		android:textColor="#ffffff"
 	 	/>
 	       <TextView 
 	             android:id="@+id/txtSizeCode"
 	    	android:layout_width="48px"
    		android:layout_height="24px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:layout_marginLeft="2px"
    		android:textColor="#ffffff"
 	 	/>
 	       <TextView 
 	           android:id="@+id/txtBuyCount"
 	    	android:layout_width="46px"
    		android:layout_height="24px"
    		android:textSize="13px"
    		android:gravity="right|center_vertical"
    		android:singleLine="true"
    		android:layout_marginLeft="2px"
    		android:textColor="#ffffff"
 	 	/>
 	    </TableRow>
 	    
 	    <TextView 
 	        android:id="@+id/txtProductname"
 	    	android:layout_width="303px"
    		android:layout_height="24px"
    		android:textSize="13px"
    		android:gravity="center_vertical"
    		android:singleLine="true"
    		android:layout_marginTop="2px"
    		android:textColor="#ffffff"
 	 	/>
 	</LinearLayout>
	
 	<TextView 
 	    	android:id="@+id/txtBuyCost"
 	    	android:layout_width="88px"
    		android:layout_height="50px"
    		android:textSize="13px"
    		android:gravity="right|center_vertical"
    		android:singleLine="true"
    		android:layout_marginLeft="2px"
    		android:textColor="#ffffff"
 	 	/>
 	<TextView 
 	    	android:id="@+id/txtAccmlPoint"
 	    	android:layout_width="70px"
    		android:layout_height="50px"
    		android:textSize="12px"
    		android:gravity="right|center_vertical"
    		android:singleLine="true"
    		android:layout_marginLeft="4px"
    		android:textColor="#ffffff"
 	 	/>
 	<TextView 
 	    	android:id="@+id/txtUsePoint"
 	    	android:layout_width="70px"
    		android:layout_height="50px"
    		android:textSize="12px"
    		android:gravity="right|center_vertical"
    		android:singleLine="true"
    		android:layout_marginLeft="4px"
    		android:textColor="#ffffff"
 	 	/>
</LinearLayout>
