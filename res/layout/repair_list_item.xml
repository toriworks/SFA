<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="780px"
    android:layout_height="38px"
     >
     <TableRow
         android:id="@+id/imgBack"
        android:layout_width="780px"
    	android:layout_height="38px"
     >
       <TextView
           android:id="@+id/txtRepairType"
    		android:layout_width="108px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
         />
    
        <TextView
            android:id="@+id/txtRepairGoods"
			android:layout_width="115px"
    		android:layout_height="38px"
    		android:layout_marginLeft="5px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
         />
        
    <TextView 
        android:id="@+id/txtRepairSpecies"
        	android:layout_width="126px"
    		android:layout_height="38px"
    		android:layout_marginLeft="4px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
        />
    
     <TextView 
          	android:id="@+id/txtRepairItem"
        	android:layout_width="118px"
    		android:layout_height="38px"
    		android:layout_marginLeft="4px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
        />
     
      <TextView 
          android:id="@+id/txtRepairCost"
        	android:layout_width="90px"
    		android:layout_height="38px"
    		android:layout_marginLeft="4px"
    		android:textSize="14px"
    		android:gravity="right|center_vertical"
    		android:singleLine="true"
    		android:textColor="#ffffff"
        />
      
       <TextView 
            android:id="@+id/txtRepairCost_Type"
        	android:layout_width="95px"
    		android:layout_height="38px"
    		android:layout_marginLeft="8px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
        />
       
       <TextView 
           android:id="@+id/txtRepair_Note"
        	android:layout_width="95px"
    		android:layout_height="38px"
    		android:layout_marginLeft="3px"
    		android:textSize="13px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
        />
    </TableRow>
</RelativeLayout>
