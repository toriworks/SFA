<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="780px"
    android:layout_height="1010px"
    >
    
    

<RelativeLayout 
     android:layout_width="780px"
    android:layout_height="106px"
 	android:background="@drawable/at_sub_search_bg02"
 >
    
    <TextView 
	        android:layout_width="60px"
	    	android:layout_height="29px"
	    	android:layout_marginLeft="50px"
	    	android:layout_marginTop="20px"
	    	android:gravity="center_vertical"
	    	android:text="성명"
	    	android:textColor="#ffffff"    	
	    	android:textSize="15px"
	    />
    <View 
        android:layout_width="195px"
    	android:layout_height="29px"
    	android:layout_marginLeft="140px"
    	android:layout_marginTop="20px"
    	android:background="@drawable/at_popup_pw_textbox"
        
     />
    <EditText 
        android:id="@+id/edit_Name"
        android:layout_width="190px"
    	android:layout_height="29px"
    	android:layout_marginLeft="145px"
    	android:layout_marginTop="20px"
		android:textColor="#ffffff"
		android:textSize="15px"
		android:hint="예) 홍길동"
		android:singleLine="true"
    	android:background="#00000000"
     />
    <TextView 
	        android:layout_width="80px"
	    	android:layout_height="29px"
	    	android:layout_marginLeft="50px"
	    	android:layout_marginTop="55px"
	    	android:gravity="center_vertical"
	    	android:text="휴대폰번호"
	    	android:textColor="#ffffff"    	
	    	android:textSize="15px"
	    />
    <View 
        android:layout_width="195px"
    	android:layout_height="29px"
    	android:layout_marginLeft="140px"
    	android:layout_marginTop="55px"
    	android:background="@drawable/at_popup_pw_textbox"
        
     />
    <EditText 
        android:id="@+id/edit_PhoneNumber"
        android:layout_width="190px"
    	android:layout_height="29px"
    	android:layout_marginLeft="145px"
    	android:layout_marginTop="55px"
		android:textColor="#ffffff"
		android:textSize="15px"
		android:singleLine="true"
		android:maxLength="11"
		android:hint="예)전체번호 또는 뒤 4자리"
		android:inputType="text|number"
    	android:background="#00000000"
     />
    
    <TextView 
	        android:layout_width="100px"
	    	android:layout_height="29px"
	    	android:layout_marginLeft="350px"
	    	android:layout_marginTop="55px"
	    	android:gravity="center_vertical"
	    	android:text="주민번호 생일"
	    	android:textColor="#ffffff"    	
	    	android:textSize="15px"
	    />
    <View 
        android:layout_width="195px"
    	android:layout_height="29px"
    	android:layout_marginLeft="450px"
    	android:layout_marginTop="55px"
    	android:background="@drawable/at_popup_pw_textbox"
        
     />
    <EditText 
        android:id="@+id/edit_PassportNumber"
        android:layout_width="190px"
    	android:layout_height="29px"
    	android:layout_marginLeft="455px"
    	android:layout_marginTop="55px"
		android:textColor="#ffffff"
		android:textSize="16px"
		android:singleLine="true"
		android:maxLength="8"
		android:hint=" 예) 19830914"
		android:inputType="text|number"
    	android:background="#00000000"
     />
    <Button 
	        android:id="@+id/btnSearch"
	     	android:layout_width="95px"
	    	android:layout_height="29px"
	    	android:text="검색"
	    	android:gravity="center"
	    	android:textColor="#ffffff"
	    	android:textSize="12px"
	    	android:layout_marginLeft="655px"
    		android:layout_marginTop="55px"
	      	android:background="@drawable/at_popup_btn_bg01"
	     />
    
</RelativeLayout>
 

 <TableRow 
        
        android:layout_width="780px"
    	android:layout_height="38px"
    	android:layout_marginTop="115px"
     	android:background="@drawable/at_sf_mem_03_grid_top"   
     >
       <TextView
    		android:layout_width="99px"
    		android:layout_height="38px"
    		android:textSize="15px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="이름"
         />
    
        <TextView
			android:layout_width="120px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="15px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="휴대폰번호" 
         />
        
    <TextView 
        	android:layout_width="104px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="15px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="생년월일"
        />
    
     <TextView 
        	android:layout_width="120px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="15px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="가용포인트"
        />
     
      <TextView 
        	android:layout_width="104px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="14px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="가입일"
        />
      
       <TextView 
        	android:layout_width="220px"
    		android:layout_height="38px"
    		android:layout_marginLeft="2px"
    		android:textSize="14px"
    		android:gravity="center"
    		android:singleLine="true"
    		android:textColor="#ffffff"
    		android:text="가입매장명"
        />
    </TableRow>

 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="155px"
    android:orientation="vertical" 
    android:gravity="center"
    >

    <ListView
        android:id="@+id/listView"
        android:layout_width="780px"
        android:layout_height="match_parent" android:layout_weight="1"
        android:fadingEdgeLength="0px"
        android:dividerHeight="0px"
        android:divider="#00000000"
        android:cacheColorHint="#00000000"
        >
    </ListView>
    <fnc.salesforce.android.PullToList.BottomPullToRefreshView
        android:id="@+id/pull_to_refresh2"
        android:layout_width="780px"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </fnc.salesforce.android.PullToList.BottomPullToRefreshView>
</LinearLayout>
</RelativeLayout>
